<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:padding="50dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivClassQRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_logo"
        android:contentDescription="@string/imgviewlogo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLoginMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbutton_background"
            android:onClick="onClickLoginMain"
            android:text="@string/login"
            android:textColor="@color/white"
            tools:ignore="VisualLintButtonSize,TextContrastCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRegisterMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/registerbutton_background"
            android:onClick="onClickRegisterMain"
            android:text="@string/register"
            android:textColor="@color/white"
            tools:ignore="TextContrastCheck,VisualLintButtonSize" />

    </LinearLayout>

</RelativeLayout>